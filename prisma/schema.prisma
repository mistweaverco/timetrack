generator client {
  provider = "prisma-client-js"
  output   = "./../generated/prisma/client"
}

datasource db {
  provider = "sqlite"
}

model Status {
  id              Int              @id @default(autoincrement())
  name            String           @unique
  companies       Company[]
  projects        Project[]
  taskDefinitions TaskDefinition[]
  tasks           Task[]
}

model Company {
  id       Int       @id @default(autoincrement())
  name     String    @unique
  statusId Int
  status   Status    @relation(fields: [statusId], references: [id], onDelete: Restrict)
  projects Project[]
}

model Project {
  id              Int              @id @default(autoincrement())
  name            String
  companyId       Int
  statusId        Int
  company         Company          @relation(fields: [companyId], references: [id], onDelete: Cascade)
  status          Status           @relation(fields: [statusId], references: [id], onDelete: Restrict)
  taskDefinitions TaskDefinition[]

  @@unique([name, companyId])
}

model TaskDefinition {
  id        Int     @id @default(autoincrement())
  name      String
  projectId Int
  statusId  Int
  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  status    Status  @relation(fields: [statusId], references: [id], onDelete: Restrict)
  tasks     Task[]

  @@unique([name, projectId])
}

model Task {
  id               Int            @id @default(autoincrement())
  taskDefinitionId Int
  description      String?
  date             DateTime       @default(now())
  seconds          Int            @default(0)
  statusId         Int
  taskDefinition   TaskDefinition @relation(fields: [taskDefinitionId], references: [id], onDelete: Cascade)
  status           Status         @relation(fields: [statusId], references: [id], onDelete: Restrict)

  @@unique([taskDefinitionId, date], name: "tasks_task_def_date_IDX")
}
